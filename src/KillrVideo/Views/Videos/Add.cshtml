@{
    ViewBag.Title = "Add Video";
}

<div id="video-add">
    <div class="row">
        <div data-bind="css: { 'col-sm-6 col-sm-push-3': !showCommonDetails() || viewVideoUrl(), 'col-sm-12': showCommonDetails }">
            <h3><em>Add</em> Video</h3>

            <uimessages></uimessages>

            <p class="alert alert-success" style="display: none" data-bind="visible: viewVideoUrl()">
                Your video has successfully been added.  <a class="alert-link" data-bind="attr: { href: viewVideoUrl }">Click here</a> to view it.
            </p>
        </div>
    </div>
    <div class="row">
        <form role="form" data-bind="submit: addVideo, visible: !viewVideoUrl()">
            <div class="col-sm-6" data-bind="css: { 'col-sm-push-3': !showCommonDetails() }">
                <div class="form-group">
                    <label for="addvideo-type">Source</label>
                    <select class="form-control add-video-source" data-bind="bootstrapSelect: { style: 'btn-inverse' }, value: selectedSource, disable: saving">
                        <option value="add-upload" data-content="<i class='fa fa-folder-open fa-fw'></i> Local Computer">Local Computer</option>
                        <option value="add-youtube" data-content="<i class='fa fa-youtube fa-fw'></i> YouTube">YouTube</option>
                    </select>
                </div>
                <!-- ko if: selectedSource -->
                <div data-bind="component: { name: selectedSource }">
                </div>
                <!-- /ko -->
            </div>
            <div class="col-sm-6" data-bind="visible: showCommonDetails">
                <div class="form-group">
                    <label for="addvideo-name">Name</label>
                    <input type="text" id="addvideo-name" class="form-control" placeholder="Video name" data-bind="value: name, hasfocus: focusCommonDetails" />
                </div>
                <div class="form-group">
                    <label for="addvideo-description">Description</label>
                    <textarea id="addvideo-description" class="form-control" rows="3" data-bind="value: description" placeholder="Video description"></textarea>
                </div>
                <div class="form-group">
                    <label for="addvideo-tags">Tags</label>
                    <select id="addvideo-tags" class="form-control" multiple 
                            data-bind="bootstrapTagsInput: { maxTags: 10, trimValue: true }, selectedOptions: tags" placeholder="Seperate tags with comma (',')"></select>
                </div>

                <button type="submit" class="btn btn-primary" data-bind="disable: saving() || !savingAvailable()">
                    <i class="fa fa-cog fa-spin" style="display: none" data-bind="visible: saving"></i> Add Video
                </button>
            </div>
        </form>
    </div>

    
</div>