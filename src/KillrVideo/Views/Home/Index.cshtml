@{
    ViewBag.Title = "Home Page";
    ViewBag.RequireJsMain = "app/index";
}

<h3 class="section-divider">
    <span><em>Recent</em> Videos</span>
</h3>

<video-preview-list params="url: '/videos/recent', pageSize: 8"></video-preview-list>

@if (User.Identity.IsAuthenticated)
{
    <h3 class="section-divider">
        <span><em>My</em> Videos</span>
    </h3>

    <video-preview-list params="url: '/videos/byuser', pageSize: 4"></video-preview-list>
}